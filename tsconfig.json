{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "target": "es6",
    "module": "ES6",
    "lib": [
      "ES2016"
    ],
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": true
  },
  "include": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}